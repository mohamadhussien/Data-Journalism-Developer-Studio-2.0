<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/3.4/menu">
	<menu id="local-applications" label="Local Applications">
		<item label="Google Refine">
			<action name="Execute">
				<execute>
					xterm -e ${HOME}/local/google-refine-2.5/refine
				</execute>
			</action>
		</item>
		<item label="Maqetta">
			<action name="Execute">
				<execute>
					xterm -e ${HOME}/local/maqetta/maqetta.local.unix.sh
				</execute>
			</action>
		</item>
		<item label="R Tk Console">
			<action name="Execute">
				<execute>
					xterm -e R -g Tk
				</execute>
			</action>
		</item>
	</menu>
	<menu execute="openbox-pipemenu" id="apps-menu" label="Applications"/>
	<menu id="ob-menu" label="Openbox Preferences">
		<item label="Openbox Configuration Manager">
			<action name="Execute">
				<command>
					obconf
				</command>
				<startupnotify>
					<enabled>
						yes
					</enabled>
				</startupnotify>
			</action>
		</item>
		<item label="Reconfigure Openbox">
			<action name="Reconfigure"/>
		</item>
	</menu>
	<menu id="root-menu" label="Openbox 3">
		<separator label="Openbox 3"/>
		<menu id="local-applications"/>
		<separator/>
		<menu id="apps-menu"/>
		<separator/>
		<menu id="ob-menu"/>
		<separator/>
		<item label="Log Out">
			<action name="Exit">
				<prompt>
					yes
				</prompt>
			</action>
		</item>
	</menu>
</openbox_menu>
